<MainWindow>
    name: "main"

    FloatLayout:
        cols:1
        Button:
            pos_hint: {"x":0.2,"y":0.5}
            size_hint: 0.6,0.2

            text: "Create Lobby"

            on_release:
                root.manager.transition.direction = "left"
                root.createBtn()

<CreateLobbyWindow>:
    name: "create"
    yourName: yourName
    mobileNumber: mobileNumber

    FloatLayout:
        cols:1
        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create a Lobby"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Your Name: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id: yourName
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "mobile: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                id: mobileNumber
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4
            Button:
                pos_hint:{"x":0.3,"y":0.25}
                size_hint: 0.4, 0.1
                font_size: (root.width**2 + root.height**2) / 17**4
                text: "Back"
                on_release:
                    root.manager.transition.direction = "right"
                    root.ReturnToMenu()
            Button:
                pos_hint:{"x":0.2,"y":0.05}
                size_hint: 0.6, 0.15
                text: "Submit"
                font_size: (root.width**2 + root.height**2) / 14**4
                on_release:
                    root.manager.transition.direction = "left"
                    root.SubmitLobby()
<LobbyWindow>:

    name: "create"
    latText : latText
    longText : longText
    FloatLayout:
        cols:1
        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "??"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                id: latText
                font_size: (root.width**2 + root.height**2) / 14**4
            Label:
                text: "??"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "y":0.7}
                id: longText
                font_size: (root.width**2 + root.height**2) / 14**4
            Button:
                pos_hint:{"x":0.2,"y":0.05}
                size_hint: 0.6, 0.15
                text: "Send Location"
                font_size: (root.width**2 + root.height**2) / 14**4
                on_release:

                    root.SendLocation()